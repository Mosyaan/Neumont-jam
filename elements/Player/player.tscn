[sub_resource type="GDScript" id="GDScript_o7pxy"]
script/source = "extends LivingEntity

@export
var movement_speed = 400

func _process(delta: float) -> void:
	%HealthBar.max_value = max_health
	%HealthBar.value = health

func _physics_process(delta: float) -> void:
	var vector = Vector2.ZERO
	vector.x = Input.get_axis(\"move_left\", \"move_right\")
	vector.y = Input.get_axis(\"move_up\", \"move_down\")
	vector = vector.normalized() * movement_speed
	
	handle_movement(vector)

func handle_animations(vector: Vector2):
	%sprite.flip_h = vector.x < 0
	if abs(vector.x) > 0:
		if %sprite.animation != \"Walking\": %sprite.animation = \"Walking\"
	else:
		if %sprite.animation != \"Idle\": %sprite.animation = \"Idle\"


func _on_peform_movement(vector: Vector2) -> void:
	handle_animations(vector)


func _on_recieve_damage() -> void:
	%Sounds/hit.play()
"

